{
  "name": "Test Screenshot Extension",
  "version": "1.3",
  "description": "Demonstrate screenshot functionality in the chrome.tabs api.",
  "background": {
    "persistent": true,
    "scripts": [
      "filesaver.min.js",
      "jszip.min.js",
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:1234/*"
    ]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
