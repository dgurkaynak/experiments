#!/bin/bash

if [ "$1" == "showcase" ]; then
    rm dist-prod/showcase.*
    rm dist-prod/styles.*
    NODE_ENV=production node --max_old_space_size=4096 ./node_modules/.bin/parcel build src/$1/index.html --public-url . --out-dir dist-prod/ --no-source-maps
else
    rm -rf dist-prod/$1
    NODE_ENV=production node --max_old_space_size=4096 ./node_modules/.bin/parcel build src/$1/index.html --public-url . --out-dir dist-prod/$1 --no-source-maps
fi
